<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
    <Appenders>
        <Console name="console" immediateFlush="false">
            <PatternLayout pattern="%d{DATE} [%5p] %c{1}:%M:%L  - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info" includeLocation="true" additivity="false">
            <AppenderRef ref="console"/>
        </Root>

    </Loggers>
</Configuration>